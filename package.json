{
  "name": "copy-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^13.0.0",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "com.copy-app",
    "productName": "Copy App",
    "files": [
      "main.js",
      "index.html",
      "preload.js",
      "lastDirectory.txt" 
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build"
    }
  }
}
